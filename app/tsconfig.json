{
    "compilerOptions": {
        "types": ["jest", "node", "@types/jest"],
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "typeRoots": [ "@types",
            "./node_modules/@types"],
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "*", 
        "*/__tests__/*"
    ]
}
